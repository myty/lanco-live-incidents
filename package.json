{
    "name": "lanco-live-incidents",
    "version": "0.1.0",
    "author": "Michael Tyson <michaeltyson@outlook.com>",
    "license": "MIT",
    "scripts": {
        "app:dev": "yarn --cwd src/lanco-incidents-app dev",
        "app:build": "yarn --cwd src/lanco-incidents-app build",
        "app:serve": "yarn --cwd src/lanco-incidents-app serve",
        "app:lint": "yarn --cwd src/lanco-incidents-app lint",
        "app:test": "yarn --cwd src/lanco-incidents-app test",
        "prepare": "husky install",
        "func:start": "cd src/lanco-incidents-func && func start",
        "func:outdated": "cd src/lanco-incidents-func && dotnet outdated"
    },
    "devDependencies": {
        "@ehutch79/vite-eslint": "^0.0.1",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "eslint": "^7.21.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-airbnb-typescript": "^12.3.1",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^7.0.4",
        "lint-staged": "^11.2.6",
        "prettier": "2.4.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "volta": {
        "node": "14.18.1"
    }
}
