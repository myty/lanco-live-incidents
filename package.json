{
    "name": "lanco-live-incidents",
    "version": "0.1.0",
    "author": "Michael Tyson <michaeltyson@outlook.com>",
    "license": "MIT",
    "scripts": {
        "app:dev": "yarn --cwd src/lanco-incidents-app dev",
        "app:build": "yarn --cwd src/lanco-incidents-app build",
        "app:serve": "yarn --cwd src/lanco-incidents-app serve",
        "app:lint": "yarn --cwd src/lanco-incidents-app lint",
        "app:test": "yarn --cwd src/lanco-incidents-app test",
        "prepare": "dotnet tool restore && husky install && dotnet husky install",
        "func:restore": "cd src/lanco-incidents-func && dotnet restore",
        "func:build": "cd src/lanco-incidents-func && dotnet clean && dotnet build",
        "func:start": "cd src/lanco-incidents-func && func start",
        "func:outdated": "cd src/lanco-incidents-func && dotnet outdated"
    },
    "devDependencies": {
        "@ehutch79/vite-eslint": "^0.0.1",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-airbnb-typescript": "^16.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "husky": "^7.0.4",
        "lint-staged": "^11.2.6",
        "prettier": "2.5.1"
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix",
        "*.{ts,tsx,js,css,md}": "prettier --write"
    },
    "volta": {
        "node": "12.18.0"
    }
}
